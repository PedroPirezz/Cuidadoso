            <ol>
              <li><a href="/CuidadosoListing">Cuidadosos</a></li>
              <li>Perfil Cuidadoso</li>
            </ol>

       
            <h2>
              <%=cadastro.Nome %>
              
            </h2>

          </div>
        </section><!-- End Breadcrumbs -->

        <!-- ======= Portfolio Details Section ======= -->
        <section id="portfolio-details" class="portfolio-details">
          <div class="container">

            <div class="row gy-2">

              <div class="col-lg-5">
                <div class="portfolio-details-slider ">


                  <img class="pessoa2" src="data:image/jpeg;base64,<%=cadastro.FotoPerfil %>" alt="Imagem do Produto">



                  <div class="swiper-pagination"></div>
                </div>
              </div>

              <div class="col-lg-6">
                <div class="portfolio-info">
                  <h3>
                   
                    
                    <% if(cadastro.TipoConta=='Administrador'){ %>
                      (<%=cadastro.TipoConta %>)
                      <% } %>
                      <% if(cadastro.id !=userId){ %>
                        <div style="display: flex;">

                          <div>
                          <%=cadastro.Nome %> 
                          </div>
                           
                        
                        
                        <div style="margin-left: 5px;"  title="Like" class="heart-container">
                          
                          <input id="Give-It-An-Id" class="checkbox" type="checkbox">
                          
