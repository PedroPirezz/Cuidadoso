<!DOCTYPE html>
<html lang="en">

<%-include('partials/head.ejs') %>

    <body>

        <!-- ======= Header ======= -->
        <%-include('partials/header.ejs') %>
            <!-- End Header -->

            <!-- ======= Hero Section ======= -->


            <main id="main">




                <br><br><br>

                <!-- ======= Contact Section ======= -->
                <section id="contact" class="contact">
                    <div class="container" data-aos="fade-up">

                        <div class="section-title">
                            <h2>Contrato</h2>
                            <p>Solicitação de Cuidadoso</p>
                        </div>

                        <div class="row">

                            <div class="col-lg-5 d-flex align-items-stretch">
                                <div class="info">
                                    <div class="address">
                                        <i class="bi bi-geo-alt"></i>
                                        <h4>localização:</h4><br><br>
                                        <h6>Localização para a realização do acompanhamento Cuidadoso</h6>
                                        <br>
                                        <h4>Selecione:</h4>
                                        <br>

                                        <h5>Salvos:</h5>
                                        <br>

                                        <div class=" endsaves">

                                            <select name="endereços" id="endsa" class="form-control ">
                                                <option value=" Nº215, Praça Assunção, Centro, Nova-Lima, Minas Gerais">
                                                    <p>Nº215, Praça Assunção, Centro, Nova-Lima, Minas Gerais</p>
                                                </option>

                                            </select>

                                        </div>
                                        <br><br>
                                        <h5>Cadastro de Endereço</h5>
                                        <br>
                                        <button onclick="divend()" class="btn btn-outline-primary ">+ Endereço</button>

                                        <div style="display: none;" class="container divend">

                                            <form action="/upload" method="POST" enctype="multipart/form-data">
                                              <br>
                                              <label >Estado</label><br>
                                              <input class="form-control " type="text"><br>
                                              <label >Cidade</label><br>
                                              <input class="form-control "  type="text"><br>
                                              <label >Rua</label><br>
                                              <input class="form-control "  type="text"><br>
                                              <label >Número</label><br>
                                              <input class="form-control "  type="text"><br>
                                              <label >Complemento</label><br>
                                              <input class="form-control "  type="text"><br>
                                              <label >Referencia</label><br>
                                              <input class="form-control "  type="text">
                        
                                              <br><br>
                                              <button class="btn btn-outline-primary " type="submit">Cadastrar</button>
                                            </form><br>
                        
                                          </div><br>
                                    </div>




                                </div>

                            </div>

                            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                                <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                                    <h4>Cuidadoso <%=contratado.Nome %></h4><br>
                                    <div style="display: flex; justify-content: center;"> 
                                        <img class="pessoa5" src="data:image/jpeg;base64,<%=contratado.FotoPerfil %>" alt="Imagem do Produto">
                                        
                                    </div><br><br>
                                    <div class="row">

                                        
                                    
                                        
                                        <div class="form-group col-md-6">
                                            <label for="name">Dia</label><br>
                                            <select class="form-control " name="dia" id="">
                                                <% for(let index=1 ; index < 32 ; index++){ %>
                                                    <option style="color: green; text-align: center;" value="<%=index %>"><%=index %></option>
                                                    <% } %>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="name">Email</label>
                                            <input type="email" class="form-control" placeholder="Digite seu email"
                                                name="email" id="email" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Assunto</label>
                                        <input type="text" class="form-control" placeholder="Descreva o assunto"
                                            name="subject" id="subject" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Mensagem</label>
                                        <textarea class="form-control" placeholder="Descreva sua dúvida" name="message"
                                            rows="10" required></textarea>
                                    </div>
                                    <div class="my-3">
                                        <div class="loading">Loading</div>
                                        <div class="error-message"></div>
                                        <div class="sent-message">Your message has been sent. Thank you!</div>
                                    </div>
                                    <div class="text-center"><button type="submit">Forma de Pagamento</button></div>
                                </form>
                            </div>

                        </div>

                    </div>
                </section><!-- End Contact Section -->











            </main><!-- End #main -->

            <!-- ======= Footer ======= -->
            <%-include('partials/footer.ejs') %>
                <!-- End Footer -->

                <div id="preloader"></div>
                <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                        class="bi bi-arrow-up-short"></i></a>

