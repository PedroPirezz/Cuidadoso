<!DOCTYPE html>
<html lang="en">

<%-include('Partials/Head.ejs') %>

<body>

  <!-- ======= Header ======= -->
  <%-include('Partials/Header.ejs')  %>
 <!-- End Header -->

  <!-- ======= Hero Section ======= -->
  

  <main id="main">

    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="/Historico">Pagamento</a></li>
          <li>Serviço</li>
        </ol>

   
        <h2>
       Pagamento do Serviço <%=minhassolicitacoes.id %>
          
        </h2>

      </div>
    </section>

    <section id="services" class="services section-bg">
      

        

         <div  class="container ">

          <div class="">



            <div class="row">

              
              <div class="col-md-6 col-lg-6 order-md-1 icon-box">
               
                <div class="box-icon">
                  <h4  style="text-align: center; color: #3C4C69;" style="text-align: center;">Resumo do Serviço</h4>
                  <br><br>
                  
                
                  <h5 >Solicitante: <label style=" color: #209dd8;"> <%=minhassolicitacoes.NomeSolicitante%></h5></label>
                  <h5 >Profissional: <label style=" color: #209dd8;"><%=minhassolicitacoes.NomeCuidadoso%></h5></label> 
                  
                  
                  
                  
                  
                  <br><br><br>
                  <h5 >Valor Total do Serviço: <label style=" color: #209dd8;"><%=(minhassolicitacoes.Valor).toFixed(2)%></label></h5>
                  <h5 >Taxa da plataforma: <label style=" color: #209dd8;"><%=(financeiro.ValoraPagar).toFixed(2)%></label></h5>
                  <h5 >Lucro do Profissional <label style=" color: #209dd8;"><%=(minhassolicitacoes.Valor-financeiro.ValoraPagar).toFixed(2)%></label></h5>
                  
                
                
                
                
                
                  
                <br><br><br><br>
                <hr>

                <h4>Total a Pagar R$<label style=" color: #209dd8;"><%=(financeiro.ValoraPagar).toFixed(2) %></label></h4>
                
                
                </div>

            </div>

              <div class="col-md-6 col-lg-6 order-md-2 icon-box">
                <h4  style="text-align: center; color: #3C4C69;" style="text-align: center;">Pagamento com cartão</h4><br>

                <form action="/PaymentMade" method="POST">

                  <div class="row">
                    <div class="col-md-12 mb-3">
                      <label for="cc-number">Títular do cartão</label>
                      <input type="text" class="form-control" id="cc-number" placeholder="" required>
                      <small class="text-muted">Ex: Pedro Henrique Rodrigues Pires</small>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12 mb-3">
                      <label for="cc-number">Número do cartão</label>
                      <input type="text" class="form-control" id="cc-number" placeholder="" required>
                      <small class="text-muted">Ex: 0000 0000 0000 0000</small>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="cc-expiration">Validade</label>
                      <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
                      <small class="text-muted">Ex: 11/25</small>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="cc-cvv">CVV</label>
                      <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
                      <small class="text-muted">Ex: 000</small>
                    </div>
                  </div>
                  <i class="fab fa-cc-visa "></i>
                  <i class="fab fa-cc-mastercard"></i>
                  <i class="fab fa-cc-amex"></i>
                  <br><br>
                  <h4>R$<%=(financeiro.ValoraPagar).toFixed(2) %></h4>
                  <hr class="mb-4">
                  <div style="text-align: center;" class="justify-content-center ">

                    

                      <input type="hidden" name="idsolicitacao" value="<%=minhassolicitacoes.id%>">
                  <input class="btn btn-primary btn-lg rounded-5 " type="submit" value="Realizar Pagamento" ></input>

                

                  </div>
                </form>
                
              </div>

              


            </div>




          </div>
































          </div>

         </div>

          
          

          
         
        
        

      
      
    </section><!-- End Services Section -->

  

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%-include('Partials/Footer.ejs')  %>
 <!-- End Footer -->

  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/vendor/aos/aos.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="/js/main.js"></script>
  <script src="/js/select.js"></script>

</body>

</html>